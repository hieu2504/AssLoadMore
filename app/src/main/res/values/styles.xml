<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlack2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNO" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlack2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <color name="colorPrimaryBlack">#2b2a2a</color>
    <color name="colorPrimaryBlack2">#3b3a3a</color>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/holo_purple</item>
    </style>
</resources>